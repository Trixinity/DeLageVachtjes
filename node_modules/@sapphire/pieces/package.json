{
  "name": "@sapphire/pieces",
  "version": "3.6.0",
  "description": "Sapphire's piece loader.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "author": "@sapphire",
  "license": "MIT",
  "scripts": {
    "lint": "eslint src scripts --ext mjs,ts --fix",
    "format": "prettier --write {src,scripts}/**/*.ts",
    "docs": "typedoc-json-parser",
    "update": "yarn upgrade-interactive",
    "clean": "node scripts/clean-dist.mjs",
    "build": "tsc -b src && node scripts/make-import.mjs && gen-esm-wrapper dist/index.js dist/index.mjs",
    "watch": "tsc -b src -w",
    "bump": "cliff-jumper",
    "check-update": "cliff-jumper --dry-run",
    "_postinstall": "husky install .github/husky",
    "prepack": "rollup-type-bundler && pinst --disable",
    "postpack": "pinst --enable"
  },
  "dependencies": {
    "@discordjs/collection": "^1.2.0",
    "@sapphire/utilities": "^3.11.0",
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@favware/cliff-jumper": "^1.8.8",
    "@favware/npm-deprecate": "^1.0.5",
    "@favware/rollup-type-bundler": "^2.0.0",
    "@sapphire/eslint-config": "^4.3.8",
    "@sapphire/prettier-config": "^1.4.4",
    "@sapphire/ts-config": "^3.3.4",
    "@types/node": "^18.11.7",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "gen-esm-wrapper": "^1.1.3",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "pinst": "^3.0.0",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "typedoc": "^0.23.19",
    "typedoc-json-parser": "^7.0.1",
    "typescript": "^4.8.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sapphiredev/pieces.git"
  },
  "files": [
    "dist/**/*.js*",
    "dist/**/*.mjs*",
    "dist/**/*.d*"
  ],
  "engines": {
    "node": ">=v14.0.0",
    "npm": ">=7.0.0"
  },
  "keywords": [
    "discordjs",
    "bot",
    "typescript",
    "ts",
    "yarn",
    "discord",
    "sapphire"
  ],
  "bugs": {
    "url": "https://github.com/sapphiredev/pieces/issues"
  },
  "homepage": "https://www.sapphirejs.dev",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "resolutions": {
    "acorn": "^8.8.1",
    "ansi-regex": "^5.0.1",
    "minimist": "^1.2.7"
  },
  "prettier": "@sapphire/prettier-config",
  "packageManager": "yarn@3.2.4"
}